{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2018", "ESNext.Array"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
